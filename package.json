{
    "name": "ueli",
    "description": "Cross-Platform Keystroke Launcher",
    "version": "9.25.1",
    "license": "MIT",
    "author": {
        "email": "oliver.schwendener@proton.me",
        "name": "Oliver Schwendener",
        "url": "https://github.com/oliverschwendener"
    },
    "main": "dist-main/index.js",
    "scripts": {
        "build": "vite build",
        "check": "npm run typecheck && npm run lint && npm run prettier:check && npm run test",
        "dev": "vite",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "package:publish": "electron-builder --config electron-builder.config.js --publish always",
        "package": "electron-builder --config electron-builder.config.js",
        "postinstall": "npm run rebuild",
        "prettier:check": "prettier --check src/**/* docs/**/*.md",
        "prettier:write": "prettier --write src/**/* docs/**/*.md",
        "rebuild": "electron-builder install-app-deps",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "test": "vitest run",
        "typecheck:main": "tsc -p src/main/tsconfig.json --noEmit",
        "typecheck:preload": "tsc -p src/preload/tsconfig.json --noEmit",
        "typecheck:renderer": "tsc -p src/renderer/tsconfig.json --noEmit",
        "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/color": "^4.2.0",
        "@types/node": "^24.0.13",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@types/react-router-dom": "^5.3.3",
        "@vitejs/plugin-react": "^5.0.2",
        "@vitest/coverage-v8": "^3.2.4",
        "electron": "^37.3.1",
        "electron-builder": "^26.0.12",
        "eslint": "^9.34.0",
        "globals": "^16.3.0",
        "node-abi": "^4.14.0",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "tree-kill": "^1.2.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.42.0",
        "vite": "^7.1.5",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@fluentui/react-components": "^9.69.0",
        "@fluentui/react-icons": "^2.0.309",
        "better-sqlite3": "^12.4.1",
        "color": "^4.2.3",
        "fast-xml-parser": "^5.2.5",
        "fuse.js": "^7.1.0",
        "fuzzysort": "^3.1.0",
        "i18next": "^25.4.2",
        "mathjs": "^14.6.0",
        "mitt": "^3.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^15.7.3",
        "react-router": "^7.8.2",
        "react-router-dom": "^7.8.2",
        "sharp": "^0.34.3",
        "uuid": "^11.1.0"
    }
}
