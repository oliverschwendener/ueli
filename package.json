{
    "name": "ueli",
    "description": "Cross-Platform Keystroke Launcher",
    "version": "9.26.0",
    "license": "MIT",
    "author": {
        "email": "oliver.schwendener@proton.me",
        "name": "Oliver Schwendener",
        "url": "https://github.com/oliverschwendener"
    },
    "main": "dist-main/index.js",
    "scripts": {
        "build": "vite build",
        "check": "npm run typecheck && npm run lint && npm run prettier:check && npm run test",
        "dev": "vite",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "package:publish": "electron-builder --config electron-builder.config.js --publish always",
        "package": "electron-builder --config electron-builder.config.js",
        "postinstall": "npm run rebuild",
        "prettier:check": "prettier --check src/**/* docs/**/*.md",
        "prettier:write": "prettier --write src/**/* docs/**/*.md",
        "rebuild": "electron-builder install-app-deps",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "test": "vitest run",
        "typecheck:main": "tsc -p src/main/tsconfig.json --noEmit",
        "typecheck:preload": "tsc -p src/preload/tsconfig.json --noEmit",
        "typecheck:renderer": "tsc -p src/renderer/tsconfig.json --noEmit",
        "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/better-sqlite3": "^7.6.13",
        "@types/color": "^4.2.0",
        "@types/node": "^25.0.9",
        "@types/react": "^19.2.8",
        "@types/react-dom": "^19.2.3",
        "@types/react-router-dom": "^5.3.3",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/coverage-v8": "^4.0.17",
        "electron": "^40.0.0",
        "electron-builder": "^26.5.0",
        "eslint": "^9.39.2",
        "globals": "^17.0.0",
        "node-abi": "^4.26.0",
        "prettier": "^3.8.0",
        "prettier-plugin-organize-imports": "^4.3.0",
        "tree-kill": "^1.2.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1",
        "vite": "^7.3.1",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6",
        "vitest": "^4.0.17"
    },
    "dependencies": {
        "@fluentui/react-components": "^9.72.9",
        "@fluentui/react-icons": "^2.0.316",
        "better-sqlite3": "^12.6.2",
        "color": "^4.2.3",
        "fast-xml-parser": "^5.3.3",
        "fuse.js": "^7.1.0",
        "fuzzysort": "^3.1.0",
        "i18next": "^25.7.4",
        "mathjs": "^15.1.0",
        "mitt": "^3.0.1",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-i18next": "^16.5.3",
        "react-router": "^7.12.0",
        "react-router-dom": "^7.12.0",
        "sharp": "^0.34.5",
        "uuid": "^13.0.0"
    }
}
