{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noUnusedLocals": true,
        "paths": {
            "@common/*": ["./src/common/*"],
            "@Core/*": ["./src/main/Core/*"]
        },
        "strict": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipLibCheck": true
    }
}
